<%=include ../include/header.ejs%>

    <form class="form-horizontal" method="post" action="/users/reg" role="form">
        <div class="form-group">
            <label class="col-md-2 control-label">账号</label>
            <div class="col-md-8">
                <input class="form-control" placeholder="请输入账号" type="text" name="username">
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">用户名</label>
            <div class="col-md-8">
                <input class="form-control" placeholder="请输入用户名" type="text" name="yourname">
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">密码</label>
            <div class="col-md-8">
                <input type="password" name="password" class="form-control" placeholder="请输入密码">
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">密码</label>
            <div class="col-md-8">
                <input type="password" name="repassword" class="form-control" placeholder="请再次输入密码">
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">邮箱</label>
            <div class="col-md-8">
                <input type="email" name="email" class="form-control" placeholder="请输入邮箱">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-md-8">
                <input type="submit" class='btn btn-default' name="submit" value="提交">
                <input type="reset" name="reset" value="重置" class="btn btn-default">
            </div>
        </div>
    </form>

<%=include ../include/footer.ejs%>
